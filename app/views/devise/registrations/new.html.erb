
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

<div class="container">
  <div class="form-item">
    <h2>Sign Up</h2>
    <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username, placeholder: "Enter Username" %></div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, placeholder: "Enter Email" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", placeholder: "Enter Password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password" %>
    </div>
    <div class="field">
      <%= f.label :avatar  %>
        <%= f.file_field :avatar %>
    </div>
    <div class="action">
      <%= f.submit "Sign Up", class: "btn btn-primary btn-sm" %>
    </div>
  <% end %>
    
  </div>

</div>


