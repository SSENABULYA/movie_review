

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="container">
      <div class ="form-item">
          <h2>User Login</h2>
            <div class="field">
              <%= f.label "Username or Email" %><br />
              <%= f.text_field :login, placeholder: "Enter Username or Email" %></div>
            <div class="field">
              <%= f.label :password %><br />
              <%= f.password_field :password, autocomplete: "off", placeholder: "Enter password" %>
            </div>

            <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end -%>
            <div class="action">
              <%= f.submit "Log in", class: "btn btn-primary btn-sm" %>
            </div>
          <% end %>
          <p> New user? <%= render "devise/shared/links" %></p>
        
      </div>
    </div>
